<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<project basedir="." default="semanticrules" name="Semantic Rules">
	<target name="semanticrules" depends="deployscripts">
		<delete dir="bin/zip" />
		<delete>
			<fileset dir="bin" includes="smwhalo-rules*.zip" />
		</delete>
		<mkdir dir="bin/zip" />

		<copy todir="bin/zip/extensions/SemanticRules/includes">
			<fileset dir="../includes/">
				<exclude name="**/.svn, **/CVS" />
			</fileset>
		</copy>
		<copy todir="bin/zip/extensions/SemanticRules/languages">
			<fileset dir="../languages/">
				<exclude name="**/.svn, **/CVS" />
			</fileset>
		</copy>
		<copy todir="bin/zip/extensions/SemanticRules/maintenance">
			<fileset dir="../maintenance/">
				<exclude name="**/.svn, **/CVS" />
			</fileset>
		</copy>
		<copy todir="bin/zip/extensions/SemanticRules/scripts">
			<fileset dir="../scripts/">
				<exclude name="**/.svn, **/CVS" />
			</fileset>
		</copy>
		<copy todir="bin/zip/extensions/SemanticRules/skins">
			<fileset dir="../skins/">
				<exclude name="**/.svn, **/CVS" />
			</fileset>
		</copy>
		<copy todir="bin/zip/extensions/SemanticRules/specials">
			<fileset dir="../specials/">
				<exclude name="**/.svn, **/CVS" />
			</fileset>
		</copy>

		<copy todir="bin/zip/extensions/SemanticRules/">
			<fileset dir="../">
				<include name="COPYING" />
				<include name="INSTALL" />
				<include name="deploy.xml" />
			</fileset>

		</copy>
		<zip destfile="bin/semanticrules.zip" basedir="bin/zip" />
		<delete dir="bin/zip" />
		<exec executable="php">
			<arg value="../../../buildtools/renameDeployable.php" />
			<arg value="../deploy.xml" />
			<arg value="bin/semanticrules.zip" />
		</exec>
	</target>
	
	<target name="deployscripts" depends="versionhint">
        <echo>Pack javascripts for Semantic Rules</echo>
        <java
            fork="true"
            jar="../../../buildtools/closure/compiler.jar"
            failonerror="true">
	        <arg value="--js=../../SemanticRules/scripts/SR_Rulewidget.js" />
	        <arg value="--js=../../SemanticRules/scripts/SR_Rule.js" />
	        <arg value="--js=../../SemanticRules/scripts/SR_CalculationRule.js" />
	        <arg value="--js=../../SemanticRules/scripts/SR_CategoryRule.js" />
            <arg value="--js=../../SemanticRules/scripts/SR_PropertyChain.js" />
            <arg value="--js_output_file=../../SemanticRules/scripts/deployRulescripts.js" />
        </java>
	</target>

	<target name="versionhint">
		<exec executable="php">
			<arg value="../../../buildtools/replaceVersionHint.php" />
			<arg value="../deploy.xml" />
			<arg value="../includes/SR_Initialize.php" />
		</exec>
	</target>
</project>
