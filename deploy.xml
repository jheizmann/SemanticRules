<?xml version="1.0" encoding="UTF-8"?>
<deploydescriptor>
	<global>
		<version>152</version>
		<id>semanticrules</id>
		<vendor>Ontoprise GmbH</vendor>
		<maintainer>Ontoprise GmbH</maintainer>
		<instdir>extensions/SemanticRules</instdir>
		<description>
			Rule provide more expressiveness and more powerful
			reasoning.
		</description>
		<helpurl>http://smwforum.ontoprise.com/smwforum/index.php/Help:Rule_Knowledge_Extension</helpurl>
		<dependencies>
			<dependency from="146">smwhalo</dependency>
		</dependencies>
	</global>
	<codefiles></codefiles>
	<wikidumps>
		<!-- empty -->
	</wikidumps>
	<resources>
		<!-- empty -->
	</resources>
	<configs>
		<precedes ext="smwhalo" />

		<new>
			<require name="smwhalo"
				file="extensions/SemanticRules/includes/SR_Initialize.php" />
			<function ext="smwhalo" name="enableSMWHalo" replace="true">
				<string name="sql_storage">SMWHaloStore2</string>
				<string name="ts_storage">SMWTripleStore</string>
				<string name="ts-url" null="true" />
			</function>
			<script
				file="extensions/SemanticRules/maintenance/setup.php" />
		</new>
		<uninstall>
			<script
				file="extensions/SemanticRules/maintenance/setup.php"
				params="--delete" />
		</uninstall>
	</configs>
</deploydescriptor>